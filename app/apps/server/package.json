    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.8.2",
    "socket.io": "^4.8.1",
    "stoker": "^2.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
